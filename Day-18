1.reverse each word in given string

public class Main
{
	public static void main(String[] args) {
		String s = "Java Code";
		String res = "";
		
		String[] words = s.split(" "); // split used to divide string in arrays of substrings
		
		for(String word : words){
		    String rev = "";
		   for(int i = word.length()-1; i >= 0; i--){
		       rev += word.charAt(i);
		   }
		   res += rev +" ";
		}
		System.out.println(res);
	}
}
